@using GastroPages.Models
@model GastroPages.Models.AdminÖffnungszeitenModel
<h2>Öffnungszeiten <a href="/I18n/Öffnungszeiten/">I18n</a></h2>

    @using (Html.BeginForm("ÖffnungszeitenEintragen", "Admin", FormMethod.Post, new { id = "EingabeForm" }))
