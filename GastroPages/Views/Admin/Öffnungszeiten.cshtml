        <td valign="top" width="10">&nbsp;</td>
        <td valign="top"><b>Ruhetag</b></td>
    </tr>

    <tr>
        <td valign="top">Montag</td>
        <td valign="top">@Html.TextBoxFor(model => model.Montag.Von1, new { size = 5 }) - @Html.TextBoxFor(model => model.Montag.Bis1, new { size = 5 })</td>
