@using GastroPages.Models
@{
    var viewModel = (MainLayoutViewModel)ViewBag.MainLayoutViewModel;
}
@using Resources = ResourcesGastro.Shared.Navi

<div class="jumbotron">
    <table border="0" width="100%">
        <tr>
            <td valign="top" width="600">
                <h1>@Resources.Willkommen</h1>
                <big>
                    <big>
                        <img src="~/Images/logoneu.gif" border="0" align="left" margin="10" />@Resources.IndexText1<br />
                        @Resources.IndexText2<br /><br />

                        @Resources.IndexText3
                    </big>
                </big>
            </td>
            <td width="20">&nbsp;</td>
            <td valign="top" class="tdIndexLogo">
                <img src="~/Images/logo.gif" width="500" /><br />
                <big>
                    <big>
                        <b>@viewModel.AdresseName - @Resources.Inhaber @viewModel.AdresseInhaber</b><br/>
                        @viewModel.AdresseStrasse<br />
                        @viewModel.AdressePlz @viewModel.AdresseOrt<br />
                        @Resources.PlanerPdfTelefon: <a href="@viewModel.TelefonCall">@viewModel.Telefon</a><br />
                    </big>
                </big><br />
            </td>
        </tr>
    </table>


</div>

<div>
    <div class="col-md-4">
        <h2>@Resources.News</h2>
        <p><small><small>@Resources.IndexNewsNoT</small></small></p>
        @if (viewModel.News.Any())
        {
            <p>
                <b>@viewModel.News.First().Datum.ToShortDateString() - <big>@viewModel.News.First().Überschrift</big></b>
            </p>
            <p>
                <b>
                    @{
                        int i = viewModel.News.First().Header.Length;
                        if (i > 50) { i = 50; }
                        @Html.Raw(viewModel.News.First().Header.Substring(0, i));

                }...
            </b>
        </p>
        <p>
            @{
                int i2 = viewModel.News.First().NewsText.Length;
                if (i2 > 100) { i2 = 100; }
                @Html.Raw(viewModel.News.First().NewsText.Substring(0, i2));
            }...
        </p>
    }
    else
    {
        <p>
            <b>@Resources.KeineAktuellenNews</b>
        </p>
    }

        <p><a class="btn btn-default" href="/Home/News">@Resources.IndexNewsBtnText &raquo;</a></p>
    </div>


    @if (viewModel.Umfragen.Count == 0)
    {
        @*<div class="col-md-4 umfrageDivIndex">
                <h2>@Resources.IndexUmfrageHeader</h2>
                <p><small><small>@Resources.IndexUmfrageNoT</small></small></p>
                <p>@Resources.IndexUmfrageText</p>
                <p><a class="btn btn-default" href="/Home/Umfrage">@Resources.IndexUmfrageBtnText &raquo;</a></p>
            </div>*@
        <div class="col-md-4" style="background-color:#ffdfdf">
            <h2>@Resources.IndexAufbauHeader</h2>
            
            <p>@Resources.IndexAufbauText</p>
            <p><b>@Resources.IndexAufbauFooter</b></p>
        </div>
    }
    else
    {
        <div class="col-md-4">
            <h2>@Resources.IndexUmfrageHeader2</h2>
            <p><small><small>@Resources.IndexUmfrageNoT</small></small></p>
            <p>@Resources.IndexUmfrageTextKeineUmfrage</p>
            <p><a class="btn btn-default" href="/Home/Umfragen">@Resources.IndexUmfrageBtnText2 &raquo;</a></p>
        </div>
    }
    <div class="col-md-4">
        <h2>@Resources.IndexTeamHeader</h2>
        <p>@Resources.IndexTeamText</p>
        <p><a class="btn btn-default" href="/Home/About">@Resources.UnserTeam &raquo;</a></p>
    </div>
</div>